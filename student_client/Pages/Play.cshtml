@page
@model PixelBoard.StudentClient.PlayModel
@{
    ViewData["Title"] = "Coordinate Input";
}

<h1>Draw a Pixel</h1>

<form method="post">
    <div>
        <label for="X">X Coordinate (0-15):</label>
        <input type="number" id="X" name="X" min="0" max="15" required />
    </div>

    <div>
        <label for="Y">Y Coordinate (0-15):</label>
        <input type="number" id="Y" name="Y" min="0" max="15" required />
    </div>

    <div>
        <label for="Team">Team:</label>
        <input type="number" id="Team" name="Team" min="0" value="0" required />
    </div>

    <button type="submit">Submit</button>
</form>

@if (!Model.ViewData.ModelState.IsValid)
{
    <div class="validation-summary-errors">
    Encountered errors:
    <ul>
        @foreach (var error in Model.ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}